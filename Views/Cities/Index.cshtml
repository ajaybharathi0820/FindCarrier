<h2>Cities</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("create")">Add new</a>

</p>
<table class="table table-bordered ">
    <tr class="bg-primary">
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CityName)
        </td>
        <td>
            <a class="btn btn-primary" href="@Url.Action("edit",new { id=item.CityID})">Edit</a>
            <a class="btn btn-danger" href="@Url.Action("delete",new { id=item.CityID})">Delete</a>
        </td>
    </tr>
}

</table>
