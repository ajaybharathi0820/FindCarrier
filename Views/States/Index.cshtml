@model IEnumerable<FindCarrier.Models.State>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("create")">Add new</a>

</p>
<table class="table table-bordered" >
    <tr class="bg-primary">
        <th>
            @Html.DisplayNameFor(model => model.StateName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StateName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StateID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StateID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StateID })
        </td>
    </tr>
}

</table>
